<Window x:Name="adminWindow" x:Class="WpfApplication1.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminWindow" Height="441.788" Width="720.953" Closing="adminLogout_Closing">
    <Grid>
        <Menu Height="22" VerticalAlignment="Top">
            <MenuItem x:Name="userControlMenuiItem" Header="Управление уч. записями" Click="UsersControl_Click"/>
            <MenuItem x:Name="reportsMenuItem" Header="Отчеты" Click="reportsMenuItem_Click"/>
            <MenuItem x:Name="exitMenuItem" Header="Выход" Click="Logout_Click"/>
        </Menu>
        <Button x:Name="buttonUpdate" Content="Обновить" Margin="0,0,5,12" Click="UpdateData_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="74"/>
        <Button x:Name="buttonAdd" Content="Добавить" Margin="0,0,85,12" Click="buttonAdd_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="74"/>
        <Button x:Name="buttonDelete" Content="Удалить" Margin="0,0,165,12" Click="buttonDelete_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="74"/>
        <TextBox x:Name="textBoxSearch" Margin="0,0,324,12" TextWrapping="Wrap" Text="Найти..." Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="191"/>
        <ComboBox x:Name="comboBoxSelectiveSearch" HorizontalAlignment="Left" Margin="5,27,0,0" VerticalAlignment="Top" Width="120"/>
        <TabControl x:Name="tabControlTables" Margin="130,22,6,44">
            <TabItem x:Name="tabItemCheck" Header="Чеки" Margin="-1,0,-22,0" MouseDoubleClick="tabItemCheck_MouseDoubleClick">
                <Grid x:Name="gridCheck" Background="#FFE5E5E5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="356*"/>
                            <ColumnDefinition Width="211*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="dataGridCheckOut" AutoGenerateColumns="False" SelectionChanged="dataGridCheckOut_SelectionChanged" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Код" Binding="{Binding ID}"/>
                                <DataGridTextColumn Header="Время" Binding="{Binding DATE}"/>
                                <DataGridTextColumn Header="Кассир" Binding="{Binding NAME}"/>
                                <DataGridTextColumn Header="Оплата" Binding="{Binding PAYTYPE}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="dataGridCheckListOut" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,26" Grid.Column="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Товар" Binding="{Binding PRODUCT}"/>
                                <DataGridTextColumn Header="Количество" Binding="{Binding VALUE}"/>
                                <DataGridTextColumn Header="Цена" Binding="{Binding PRICE}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock x:Name="totalPriceTextBlock" TextWrapping="Wrap" Height="26" VerticalAlignment="Bottom" Grid.Column="1"><Run Language="ru-ru" Text="Общая цена : "/></TextBlock>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemDiscount" Header="Акции" Margin="21,0,-21,0" MouseDoubleClick="tabItemDiscount_MouseDoubleClick">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridDiscountOut" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,-6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Код" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Товар" Binding="{Binding NAME}"/>
                            <DataGridTextColumn Header="Скидка" Binding="{Binding PRICE}"/>
                            <DataGridTextColumn Header="Начало" Binding="{Binding BDATE, StringFormat=\{0:dd.MM.yy\}}"/>
                            <DataGridTextColumn Header="Конец" Binding="{Binding EDATE, StringFormat=\{0:dd.MM.yy\}}"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding TEXT}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemEmployee" Header="Работники" Height="20" VerticalAlignment="Top" Margin="20,0,-20,0" MouseDoubleClick="tabItemEmployee_MouseDoubleClick">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridEmployeeOut" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,-6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Код" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Ф.И.О." Binding="{Binding NAME}"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding TEL}"/>
                            <DataGridTextColumn Header="Должность" Binding="{Binding POSITION}"/>
                            <DataGridTextColumn Header="№ контракта" Binding="{Binding CONTRACT}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemManufacturer" Header="Производители" Height="20" VerticalAlignment="Top" Margin="18,0,-18,0" MouseDoubleClick="tabItemManufacturer_MouseDoubleClick">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridManufacturersOut" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,-6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Код" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding NAME}"/>
                            <DataGridTextColumn Header="Страна" Binding="{Binding COUNTRY}"/>
                            <DataGridTextColumn Header="Город" Binding="{Binding CITY}"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding ADDR}"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding TEL}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemProduct" Header="Товары" Height="20" VerticalAlignment="Top" Margin="16,0,-16,0" MouseDoubleClick="tabItemProduct_MouseDoubleClick">
                <Grid Background="#FFE5E5E5">
                    <Grid Margin="0,0,0,-6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="356*"/>
                            <ColumnDefinition Width="211*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="dataGridProductOut" AutoGenerateColumns="False" SelectionChanged="dataGridProductOut_SelectionChanged" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Код" Binding="{Binding ID}"/>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding NAME}"/>
                                <DataGridTextColumn Header="Производитель" Binding="{Binding MANUFACTURER}"/>
                                <DataGridTextColumn Header="Группа" Binding="{Binding GROUP}"/>
                                <DataGridTextColumn Header="Упаковка" Binding="{Binding PACK}"/>
                                <DataGridTextColumn Header="Материал" Binding="{Binding MATERIAL}"/>
                                <DataGridTextColumn Header="Отпуск" Binding="{Binding FORM}"/>
                                <DataGridTextColumn Header="Инструкция" Binding="{Binding INSTRUCTION}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="dataGridProductActPriceOut" AutoGenerateColumns="False" IsReadOnly="True" Grid.Column="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DATE, StringFormat=\{0:dd.MM.yy\}}"/>
                                <DataGridTextColumn Header="Цена" Binding="{Binding PRICE}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemWaybill" Header="Накладные" Height="20" VerticalAlignment="Top" Margin="15,0,-15,0" MouseDoubleClick="tabItemWaybill_MouseDoubleClick">
                <Grid Background="#FFE5E5E5">
                    <Grid Margin="0,0,0,-6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="356*"/>
                            <ColumnDefinition Width="211*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="dataGridWaybillOut" AutoGenerateColumns="False" SelectionChanged="dataGridWaybillOut_SelectionChanged" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Код" Binding="{Binding ID}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DATE, StringFormat=\{0:dd.MM.yy\}}"/>
                                <DataGridTextColumn Header="Принял" Binding="{Binding EMPLOYEE}"/>
                                <DataGridTextColumn Header="Контрагент" Binding="{Binding AGENT}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid x:Name="dataGridWaybillListOut" AutoGenerateColumns="False" IsReadOnly="True" Grid.Column="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Товар" Binding="{Binding PRODUCT}"/>
                                <DataGridTextColumn Header="Количество" Binding="{Binding VALUE}"/>
                                <DataGridTextColumn Header="Опт.цена" Binding="{Binding TRADEPRICE}"/>
                                <DataGridTextColumn Header="Дата поступления" Binding="{Binding BDATE, StringFormat=\{0:dd.MM.yy\}}"/>
                                <DataGridTextColumn Header="Годен до" Binding="{Binding EDATE, StringFormat=\{0:dd.MM.yy\}}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="buttonEdit" Content="Изменить" Margin="0,0,244,12" Click="buttonEdit_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <GridSplitter HorizontalAlignment="Left" Height="316" Margin="418,39,0,0" VerticalAlignment="Top" Width="4"/>
    </Grid>
</Window>