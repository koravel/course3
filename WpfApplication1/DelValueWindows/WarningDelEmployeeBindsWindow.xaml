<Window x:Class="WpfApplication1.WarningDelEmployeeBindsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WarningDelBindsWindow" Height="161" Width="269" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid x:Name="gridWarnWin">
        <Label x:Name="labelWarning" Content="Вы уверены, что хотите удалить все данные,&#xD;&#xA;связанные с этой записью(накладные,чеки)?" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="261"/>
        <Button x:Name="buttonDelBinds" Content="Да" HorizontalAlignment="Left" Margin="34,67,0,0" VerticalAlignment="Top" Width="75" Click="buttonDelBinds_Click"/>
        <Button x:Name="buttonNotDelBinds" Content="Нет" HorizontalAlignment="Left" Margin="144,67,0,0" VerticalAlignment="Top" Width="75" Click="buttonNotDelBinds_Click"/>
        <CheckBox x:Name="checkBoxWarningSettings" Content="Больше не показывать это окно" HorizontalAlignment="Left" Margin="13,100,0,0" VerticalAlignment="Top" Checked="checkBoxWarningSettings_Checked"/>

    </Grid>
</Window>
