<Window x:Class="WpfApplication1.WarningDelProductBindsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WarningDelProductBindsWindow" Height="149" Width="289">
    <Grid>
        <Label x:Name="labelWarning" Content="Вы уверены, что хотите удалить все данные,&#xA;связанные с этой записью(накладные,скидки)?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="271" Margin="10,0,0,0"/>
        <Button x:Name="buttonDelBinds" Content="Да" HorizontalAlignment="Left" Margin="53,51,0,0" VerticalAlignment="Top" Width="75" Click="buttonDelBinds_Click"/>
        <Button x:Name="buttonNotDelBinds" Content="Нет" HorizontalAlignment="Left" Margin="163,51,0,0" VerticalAlignment="Top" Width="75" Click="buttonNotDelBinds_Click"/>
        <CheckBox x:Name="checkBoxWarningSettings" Content="Больше не показывать это окно" HorizontalAlignment="Left" Margin="32,84,0,0" VerticalAlignment="Top" Checked="checkBoxWarningSettings_Checked"/>

    </Grid>
</Window>
