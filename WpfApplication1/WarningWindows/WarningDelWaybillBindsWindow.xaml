<Window x:Class="WpfApplication1.WarningDelWaybillBindsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WarningDelWaybillBindsWindow" Height="168" Width="339">
    <Grid>
        <Label x:Name="labelWarning" Content="Вы уверены, что хотите удалить все данные,&#xA;связанные с этой записью(товары в накладной,&#xA;информация о товаре)?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="318" Margin="10,0,-36,0" FontSize="14"/>
        <Button x:Name="buttonDelBinds" Content="Да" HorizontalAlignment="Left" Margin="72,69,0,0" VerticalAlignment="Top" Width="75" Click="buttonDelBinds_Click" FontSize="14" IsDefault="True"/>
        <Button x:Name="buttonNotDelBinds" Content="Нет" HorizontalAlignment="Left" Margin="182,69,0,0" VerticalAlignment="Top" Width="75" Click="buttonNotDelBinds_Click" FontSize="14" IsCancel="True"/>
        <CheckBox x:Name="checkBoxWarningSettings" Content="Больше не показывать это окно" HorizontalAlignment="Left" Margin="45,110,0,0" VerticalAlignment="Top" Click="checkBoxWarningSettings_Click" FontSize="14"/>

    </Grid>
</Window>
