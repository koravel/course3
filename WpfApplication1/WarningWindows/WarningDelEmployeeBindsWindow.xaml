<Window x:Class="WpfApplication1.WarningDelEmployeeBindsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WarningDelBindsWindow" Height="167" Width="309" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="gridWarnWin">
        <Label x:Name="labelWarning" Content="Вы уверены, что хотите удалить все данные,&#xD;&#xA;связанные с этой записью(накладные,чеки)?" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="301" FontSize="14"/>
        <Button x:Name="buttonDelBinds" Content="Да" HorizontalAlignment="Left" Margin="56,62,0,0" VerticalAlignment="Top" Width="75" Click="buttonDelBinds_Click" FontSize="14" IsDefault="True"/>
        <Button x:Name="buttonNotDelBinds" Content="Нет" HorizontalAlignment="Left" Margin="166,62,0,0" VerticalAlignment="Top" Width="75" Click="buttonNotDelBinds_Click" FontSize="14" IsCancel="True"/>
        <CheckBox x:Name="checkBoxWarningSettings" Content="Больше не показывать это окно" HorizontalAlignment="Left" Margin="34,101,0,0" VerticalAlignment="Top" Click="checkBoxWarningSettings_Click" FontSize="14"/>

    </Grid>
</Window>
