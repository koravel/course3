<Window x:Class="WpfApplication1.WarningDelManufacturerBindsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WarningDelManufacturerBindsWindow" Height="173" Width="314" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Вы уверены, что хотите удалить все данные,&#xA;связанные с этой записью(товары,скидки,&#xA;цены)?" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="buttonDelBinds" Content="Да" HorizontalAlignment="Left" Margin="61,71,0,0" VerticalAlignment="Top" Width="75" Click="buttonDelBinds_Click" FontSize="14" IsDefault="True"/>
        <Button x:Name="buttonNotDelBinds" Content="Нет" HorizontalAlignment="Left" Margin="170,71,0,0" VerticalAlignment="Top" Width="75" Click="buttonNotDelBinds_Click" FontSize="14" IsCancel="True"/>
        <CheckBox x:Name="checkBoxWarningSettings" Content="Больше не показывать это сообщение" HorizontalAlignment="Left" Margin="21,116,0,0" VerticalAlignment="Top" IsChecked="False" Click="checkBoxWarningSettings_Click" FontSize="14"/>

    </Grid>
</Window>
