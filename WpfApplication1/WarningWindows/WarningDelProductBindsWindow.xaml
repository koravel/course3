<Window x:Class="WpfApplication1.WarningDelProductBindsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="154" Width="334" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Pharmacy DataBase;component/icone.ico">
    <Grid>
        <Label x:Name="labelWarning" Content="Вы уверены, что хотите удалить все данные,&#xA;связанные с этой записью(накладные,скидки)?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="318" Margin="10,0,0,0" FontSize="14"/>
        <Button x:Name="buttonDelBinds" Content="Да" HorizontalAlignment="Left" Margin="70,52,0,0" VerticalAlignment="Top" Width="75" Click="buttonDelBinds_Click" FontSize="14" IsDefault="True"/>
        <Button x:Name="buttonNotDelBinds" Content="Нет" HorizontalAlignment="Left" Margin="180,52,0,0" VerticalAlignment="Top" Width="75" Click="buttonNotDelBinds_Click" FontSize="14" IsCancel="True"/>
        <CheckBox x:Name="checkBoxWarningSettings" Content="Больше не показывать это окно" HorizontalAlignment="Left" Margin="43,93,0,0" VerticalAlignment="Top" Click="checkBoxWarningSettings_Click" FontSize="14"/>

    </Grid>
</Window>
