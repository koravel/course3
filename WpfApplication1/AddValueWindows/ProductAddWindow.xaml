        <TextBox x:Name="textBoxInstruction" HorizontalAlignment="Left" Height="154" Margin="109,231,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="41,7,0,0" VerticalAlignment="Top"/>
