<Window x:Class="WpfApplication1.WaybillAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WaybillAddWindow" Height="175" Width="864">
    <Grid>
        <DatePicker x:Name="datePickerToday" HorizontalAlignment="Left" Margin="87,14,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxAgent" HorizontalAlignment="Left" Height="23" Margin="87,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Дата" HorizontalAlignment="Left" Margin="47,12,0,0" VerticalAlignment="Top"/>
        <Label Content="Принял" HorizontalAlignment="Left" Margin="30,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Контрагент" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"/>
        <Button x:Name="bttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Width="75" Click="bttonSave_Click"/>
        <Button x:Name="buttonBack" Content="Назад" HorizontalAlignment="Left" Margin="132,113,0,0" VerticalAlignment="Top" Width="75" Click="buttonBack_Click"/>
        <DataGrid x:Name="dataGridInfo" HorizontalAlignment="Left" Margin="212,0,-275,0" VerticalAlignment="Top" Height="145" Width="644" AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код товара" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding NAME}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding VALUE}"/>
                <DataGridTextColumn Header="Опт.цена" Binding="{Binding PRICE}"/>
                <DataGridTextColumn Header="Дата поступления" Binding="{Binding BDATE}"/>
                <DataGridTextColumn Header="Годен до" Binding="{Binding EDATE}"/>
                <DataGridTextColumn Header="Оплата" Binding="{Binding PAYTYPE}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox x:Name="comboBoxEployees" HorizontalAlignment="Left" Margin="87,44,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
