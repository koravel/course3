        <Label Content="Товар" Margin="4,11,19,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Скидка" Margin="3,39,8,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Начало" Margin="3,68,6,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Конец" Margin="4,99,14,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Описание" Margin="-3,131,1,0" VerticalAlignment="Top" Height="26"/>
        <Button x:Name="buttonSave" Content="Сохранить" Margin="0,0,116,10" Click="buttonSave_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="67" Grid.ColumnSpan="2"/>
        <Button x:Name="buttonBack" Content="Назад" Margin="0,0,34,10" Click="buttonBack_Click" Grid.Column="1" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="67"/>

    </Grid>
</Window>
