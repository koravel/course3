        <ComboBox x:Name="comboBoxProduct" Margin="65,12,34,0" Height="22" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxPrice" Margin="65,43,34,0" Text="" TextWrapping="Wrap" Height="22" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxDescription" Margin="65,130,34,38" Text="" TextWrapping="Wrap" Grid.ColumnSpan="2"/>
